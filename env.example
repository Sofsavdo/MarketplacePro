# ========================================
# AFFILIMART - Environment Variables
# ========================================

# ========================================
# APP CONFIGURATION
# ========================================
NODE_ENV=development
APP_NAME=AFFILIMART
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
ADMIN_URL=http://localhost:3001
MOBILE_API_URL=http://localhost:8000

# ========================================
# DATABASE CONFIGURATION
# ========================================
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=affilimart
POSTGRES_USER=affilimart_user
POSTGRES_PASSWORD=affilimart_password
POSTGRES_SSL=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MongoDB
MONGODB_URI=mongodb://localhost:27017/affilimart_analytics

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# ========================================
# AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Password
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# ========================================
# PAYMENT GATEWAYS
# ========================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Local Payment Systems (Uzbekistan)
CLICK_MERCHANT_ID=your-click-merchant-id
CLICK_SERVICE_ID=your-click-service-id
CLICK_SECRET_KEY=your-click-secret-key

PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key

# ========================================
# FILE STORAGE
# ========================================
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=affilimart-storage

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=affilimart-storage
GOOGLE_CLOUD_KEY_FILE=path/to/service-account-key.json

# ========================================
# EMAIL & NOTIFICATIONS
# ========================================
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@affilimart.com
SENDGRID_FROM_NAME=AFFILIMART

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# ========================================
# ANALYTICS & MONITORING
# ========================================
# Sentry
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id

# ========================================
# AI/ML SERVICES
# ========================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key

# TensorFlow Serving
TENSORFLOW_SERVING_URL=http://localhost:8501

# ========================================
# SEARCH & RECOMMENDATIONS
# ========================================
# Algolia
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_ADMIN_KEY=your-algolia-admin-key

# ========================================
# CACHE & PERFORMANCE
# ========================================
# CDN
CDN_URL=https://cdn.affilimart.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# COMMISSION RATES
# ========================================
# Default Commission Rates (%)
DEFAULT_MERCHANT_COMMISSION=10
DEFAULT_AFFILIATE_COMMISSION=15
PLATFORM_COMMISSION=5

# Category-specific rates
ELECTRONICS_COMMISSION=8
FASHION_COMMISSION=12
HOME_GARDEN_COMMISSION=10
BEAUTY_HEALTH_COMMISSION=15
SPORTS_OUTDOOR_COMMISSION=12

# ========================================
# FEATURE FLAGS
# ========================================
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_GAMIFICATION=true
ENABLE_LIVE_STREAMING=false
ENABLE_AR_VR=false
ENABLE_VOICE_COMMERCE=false

# ========================================
# DEVELOPMENT & TESTING
# ========================================
# Test Database
TEST_POSTGRES_DB=affilimart_test
TEST_REDIS_DB=1

# Mock Services
MOCK_PAYMENTS=true
MOCK_EMAILS=true
MOCK_SMS=true

# Debug
DEBUG=affilimart:*
LOG_LEVEL=debug

# ========================================
# INTERNATIONALIZATION
# ========================================
DEFAULT_LOCALE=uz
SUPPORTED_LOCALES=uz,ru,en,ar
RTL_LOCALES=ar

# ========================================
# LEGAL & COMPLIANCE
# ========================================
# GDPR
GDPR_ENABLED=true
DATA_RETENTION_DAYS=2555

# Terms & Privacy
TERMS_URL=https://affilimart.com/terms
PRIVACY_URL=https://affilimart.com/privacy
COOKIE_POLICY_URL=https://affilimart.com/cookies 